@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><i class="fas fa-dog"></i>PetLove</h1>
    
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/v1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v4.jpg" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v5.jpg" alt="Fifth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v6.jpg" alt="Sixth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v7.jpg" alt="Seventh slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v8.png" alt="Eighth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/v9.jpg" alt="Nineth slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr />
<div class="row">
    <div class="col-md-3">
        <a asp-action="MyPets" class="btn btn-primary"><i class=" fas fa-dog"></i> Mis Mascotas</a>
    </div>
    <div class="col-md-3">
        <a asp-action="MyAgenda" class="btn btn-warning"><i class=" fas fa-calendar-alt"></i> Mis Citas</a>
    </div>
</div>